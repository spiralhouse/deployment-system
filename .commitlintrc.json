{
    "extends": [
        "@commitlint/config-conventional"
    ],
    "rules": {
        "type-enum": [
            2,
            "always",
            [
                "build",
                "chore",
                "ci",
                "docs",
                "feat",
                "fix",
                "perf",
                "refactor",
                "revert",
                "style",
                "test"
            ]
        ],
        "subject-case": [
            2,
            "always",
            [
                "sentence-case",
                "lower-case"
            ]
        ],
        "body-max-line-length": [
            2,
            "always",
            100
        ],
        "header-max-length": [
            2,
            "always",
            72
        ],
        "subject-full-stop": [
            2,
            "never",
            "."
        ]
    }
}